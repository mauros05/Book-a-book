 <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "journey.png", style: "height: 40px; width: auto" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
           <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link"%>
          </li>
          <li class="nav-item">
           <%= button_to "All books", user_session_path, class: "nav-link"  %>
          </li>
          <li class="nav-item">
            <%= image_tag "logo_book.webp", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, style: "height: 50px; width: auto" %>
          </li>
        <% else %>
        <%= link_to "Sign in", user_session_path, class: "nav-link" %>
        <% end %>
      </ul>
    </div>
  </div>
