<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit book</h3>
        <%= simple_form_for @book do |f| %>
          <%= f.input :title %>
          <%= f.input :edition%>
          <%= f.input :author %>
          <%= f.submit class: "btn btn-success"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
