<div class="background_forgot image_size">
  <div class="container col-4 text-center rounded">
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", style: "color: white; padding-right:50px; padding-left:50px; background-color: #276678; border-radius: 50px" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
