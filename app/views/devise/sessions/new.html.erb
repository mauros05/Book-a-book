<div class="background_sessions image_size">
  <div class="container col-3 text-center rounded">
    <h2>Sign in</h2>
    <%= image_tag "https://images.pexels.com/photos/1181325/pexels-photo-1181325.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940", class: "bd-placeholder-img rounded-circle", style: "width:100px; height:100px; object-fit: cover;" %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", style: "color: white; padding-right:50px; padding-left:50px; background-color: #276678; border-radius: 50px" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
